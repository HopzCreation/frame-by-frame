{
    "manifest_version": 2,
    "name": "Frame By Frame",
    "version": "0.12",
    "version_name": "0.12 alpha",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "description": "Best Frame By Frame Tool. Works with all websites! Move your mouse cursor over video and use keyboard arrows to switch frames.",
    
    "content_scripts": [{
        "all_frames": true,
        "js": [
            "content-scripts.js"
        ],
        "css": [
            "content-scripts.css"
        ],
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "run_at": "document_start"
    }]
}
