{
    "manifest_version": 2,
    "name": "Frame By Frame",
    "description": "Best Frame By Frame Tool. Works with all websites! Move your mouse cursor over video and use keyboard arrows to switch frames.",
    "version": "1.0",

    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },

    "content_scripts": [{
        "all_frames": true,
        "css": [
            "content-styles.css"
        ],
        "js": [
            "content-scripts.js"
        ],
        "matches": [
            "<all_urls>"
        ],
        "run_at": "document_start"
    }],

    "permissions": [
        "storage",
        "tabs"
    ]
}