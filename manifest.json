{
    "manifest_version": 2,
    "name": "Video Frame By Frame slowMo,GIF,fps,facebook",
    "description": "Video frame by frame! Play slow-motion animation. Move your cursor on a video,Use Arrow-keys,Save Frames,reddit 9gag tiktok twitter",

    "version": "0.12",
    "version_name": "0.12 alpha",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },    
    "content_scripts": [{
        "all_frames": true,
        "js": [
            "content-scripts.js"
        ],
        "css": [
            "content-scripts.css"
        ],
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "run_at": "document_start"
    }]
}
